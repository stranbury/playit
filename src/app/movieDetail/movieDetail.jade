div(ng-hide="movieDetailCtrl.preview")
  .playitMaterial-fullBackground(ng-style="{'background-image':'url({{ movieDetailCtrl.background }})'}")
  md-contain.no-background.detail-content( layout="row" flex layout-align="center center")
    .content-texte(layout= "column"  layout-align="start start") 
      h1.pl-movie-title {{ movieDetailCtrl.movie.original_title }} 
      span(layout="row" layout-align="center center" flex)
        md-button.movie-genre(ng-repeat="genre in movieDetailCtrl.movie.genres" ui-sref="app.home.kind({ id: genre.id })") {{genre.name}}
      p.movie-description {{ movieDetailCtrl.movie.overview}}
      span.container-button(layout="row" layout-align="center center" flex="100")
        md-button( aria-label="Eat cake") Trailler
        md-button( aria-label="Eat cake") RECOMMANDATION
    md-card.md-default-theme.pl-card-movie-detail(ng-style="{'background-image':'url(https://image.tmdb.org/t/p/w500{{ ::movieDetailCtrl.movie.poster_path }})'}")
